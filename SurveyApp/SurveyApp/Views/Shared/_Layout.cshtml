@using HPAuthenticate.Helpers

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" ></meta>
    <title>@ViewBag.Title</title>
	<link href="@Url.Stylesheet("themes/base/jquery.ui.base.css")" rel="stylesheet" type="text/css"></link>
	<link href="@Url.Stylesheet("themes/base/jquery.ui.theme.css")" rel="stylesheet" type="text/css"></link>
	<link href="@Url.Stylesheet("themes/base/jquery.ui.autocomplete.css")" rel="stylesheet" type="text/css"></link>
	<link href="@Url.Stylesheet("Site.css")" rel="stylesheet" type="text/css"></link>
	<script type='text/javascript'>
		if (!console) {
			var console = {
				log: function () { },
				debug: function () { },
				warn: function() { }
			}
		}
	</script>
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
	<script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.16/jquery-ui.min.js"></script>
    <script src="@Url.Script("modernizr-1.7.min.js")" type="text/javascript"></script>
	<script src="@Url.Script("jquery.tipsy.pack.js")" type="text/javascript"></script>
	<script src="@Url.Script("json2.pack.js")" type="text/javascript"></script>
	<script src="@Url.Script("app.js")" type="text/javascript"></script>

	<script type='text/javascript'>

		$(document).ready(function () {
			$('#link_reporting').tipsy({ gravity: 'n' });
		});
	</script>
	@RenderSection("header_scripts", false)
</head>
<body>
    <div class="page">
        <header>
			<h1>
				<img src="@Url.Image("hpwdtop3.jpg")" alt=''></img>
				<a href="@Url.Action("Index", "Home")">
					<img src='@Url.Image("hpwdbanner.gif")' alt='High Plains Conservation District'></img>
				</a>
			</h1>
            <nav>
	

				<div class='clear'></div>

            </nav>
        </header>
        <section id="main">

			<div id='flash'></div>
			@Flash.FlashMessage(TempData)

            @RenderBody()
        </section>
        <footer>
			<a href="http://hpwd.com/home.asp">Home</a> |
			<a href="http://hpwd.com/about_us.asp">About Us</a> |
			<a href="http://hpwd.com/the_ogallala.asp">Ogallala</a> |
			<a href="http://hpwd.com/programs/programs.asp">Programs &amp; Activities</a> |
			<a href="http://hpwd.com/news/news.asp">News &amp; Info</a><br>

			<a href="http://hpwd.com/Conversation/conservmenu.asp">Conservation Tips</a> |
			<a href="http://hpwd.com/links.asp">Water Links</a> |
			<a href="http://hpwd.com/downloads/downloads.asp">Downloads</a> |
			<a href="http://hpwd.com/contact_us.asp">Contact Us</a> |
			<a href="http://hpwd.com/contact/mailform.asp?qsMailType=Survey&qsEmailTo=Info@hpwd.com">Feedback</a>
        </footer>
    </div>

	@RenderSection("footer_scripts", false)
</body>
</html>
